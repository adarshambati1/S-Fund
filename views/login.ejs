<html>
<%- include("./partials/head.ejs") %>

<body>
    <%- include("./partials/nav.ejs") %>
    <h1>Welcome. Please Sign In.</h1>
    <div class="login">
      <h2>All Blogs</h2>
  
      <% if (blogs.length > 0) { %>
        <% blogs.forEach(blog => { %>
  
          <h3 class="title"><%= blog.title %></h3>
          <p class="snippet"><%= blog.snippet %></p>
  
        <% }) %>
      <% } else { %>
        <p>There are no blogs to display...</p>
      <% } %>
      
    </div>
  
    <%- include("./partials/footer.ejs") %>
  </body>


</html>